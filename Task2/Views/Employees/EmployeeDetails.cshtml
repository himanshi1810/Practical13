@model IEnumerable<Task2.ViewModels.EmployeeDetailsViewModel>

@{
    ViewBag.Title = "Employee Details";
}

<h2>Employee Details</h2>

<table class="table">
    <tr>
        <th>Employee ID</th>
        <th>First Name</th>
        <th>Middle Name</th>
        <th>Last Name</th>
        <th>Designation</th>
        <th>Date of Birth</th>
        <th>Mobile Number</th>
        <th>Address</th>
        <th>Salary</th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>@item.EmployeeId</td>
            <td>@item.FirstName</td>
            <td>@item.MiddleName</td>
            <td>@item.LastName</td>
            <td>@item.DesignationName</td>
            <td>@item.DOB.ToShortDateString()</td>
            <td>@item.MobileNumber</td>
            <td>@item.Address</td>
            <td>@item.Salary.ToString("C")</td>
        </tr>
    }
</table>

@Html.ActionLink("Back to List", "Index", null, new { @class = "btn btn-default" })